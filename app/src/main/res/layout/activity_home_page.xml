<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bc_homepage"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/menu_24"
            android:backgroundTint="@color/bluebtn"/>

        <TextView
            android:id="@+id/hslUser"
            android:layout_width="173dp"
            android:layout_height="108dp"
            android:layout_marginTop="80dp"
            android:lineSpacingExtra="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="83dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/pp_homepage" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_homepage">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:text="Today is Schdule "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="20dp"
            android:text="* Pemograman Web || B31 || 505 || Offline"
            android:textColor="@color/bluebtn"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="20dp"
            android:text="* Pemograman Mobile || A31 || LAB IR  Offline"
            android:textColor="@color/bluebtn"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="20dp"
            android:text="* Teknik Digital || A31 || LAB ES || Offline"
            android:textColor="@color/bluebtn"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="20dp"
            android:text="* Pemograman SQL || A31 || 901 || Offline"
            android:textColor="@color/bluebtn"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/bluebtn"
            android:textStyle="bold"
            android:text="LINK MEET" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/home"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/notif"/>

        <ImageButton
            android:id="@+id/btn_profilemahasiswa"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/profile"/>
    </LinearLayout>

    </LinearLayout>